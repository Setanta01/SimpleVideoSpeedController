{
  "manifest_version": 3,
  "name": "Simple Video Speed Controller",
  "version": "1.2",
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "tabs",
    "commands"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "description": "Automatically adjust video speed on any website.",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "exclude_matches": [
       
        
      ],
      "js": ["content.js"],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "chaseosapps@gmail.com"
    }
  }
}
